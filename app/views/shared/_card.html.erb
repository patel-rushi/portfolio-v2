<a href="#" class='card blog-card' data-post-id="<%= post[:id] %>">
    <div class='blog-text'>
        <div class='blog-title'><%= post[:title] %></div>
        <div class='blog-category'><%= post[:category] %> 
         <% if !post[:published_at].empty? %>
            on <%= post[:published_at].to_date.strftime('%b %d, %Y') %>
        <% end %>
        </div>
        <div class='blog-content'>
            <%= raw truncate(post[:content], 400) %>
        </div>
    </div>
    <div class='blog-arrow'>
        <i class="fas fa-arrow-right"></i>
    </div>
</a>

<!-- Popup element -->
<div id="popup-<%= post[:id] %>" class="popup" data-post-id="<%= post[:id] %>">
    <div class="popup-content">
        <span class="close">&times;</span>
        <p><%= raw post[:content] %></p>
    </div>
</div>